{
  "name": "smarttable",
  "version": "1.0.0",
  "description": "Modern Excel-like spreadsheet application with AI",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "tsc && node copy-assets.cjs",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "spreadsheet",
    "excel",
    "ai"
  ],
  "author": "Pavel x Sava",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "electron": "^28.3.3",
    "electron-builder": "^26.8.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1"
  },
  "build": {
    "appId": "com.smarttable.app",
    "productName": "SmartTable",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "src/SmartTable.png",
      "src/SmartTableStartApp.png",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "dist/SmartTable.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "dist/SmartTable.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "dist/SmartTable.png",
      "category": "Office"
    }
  }
}
